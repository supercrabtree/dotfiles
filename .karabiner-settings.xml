<?xml version="1.0"?>
<root>
    <item>
      <name>Ctrl hjkl as Arrow keys</name>
      <appendix>Ctrl hjkl as Arrow keys</appendix>

      <identifier>space_cadet.hjkl</identifier>
      <autogen>
        --KeyToKey--
        KeyCode::H, ModifierFlag::CONTROL_L,

        KeyCode::CURSOR_LEFT
      </autogen>
      <autogen>
        --KeyToKey--
        KeyCode::J, ModifierFlag::CONTROL_L,

        KeyCode::CURSOR_DOWN
      </autogen>
      <autogen>
        --KeyToKey--
        KeyCode::K, ModifierFlag::CONTROL_L,

        KeyCode::CURSOR_UP
      </autogen>
      <autogen>
        --KeyToKey--
        KeyCode::L, ModifierFlag::CONTROL_L,

        KeyCode::CURSOR_RIGHT
      </autogen>
    </item>
    <item>
      <name>Left Ctrl and Semicolon to Colon</name>
      <appendix>Stops typos in Vim when Shift and Semicolon were supposed to have been pressed</appendix>

      <identifier>space_cadet.left_control_and_semicolon_to_colon</identifier>

      <autogen>
        --KeyToKey--
        KeyCode::SEMICOLON, ModifierFlag::CONTROL_L,

        KeyCode::SEMICOLON, ModifierFlag::SHIFT_L
      </autogen>

    </item>
    <item>
      <name>Left Ctrl and Quote to Doublequote</name>
      <appendix>Stops typos in Vim when Shift and Quote were supposed to have been pressed</appendix>

      <identifier>space_cadet.left_control_and_quote_to_double_quote</identifier>

      <autogen>
        --KeyToKey--
        KeyCode::QUOTE, ModifierFlag::CONTROL_L,

        KeyCode::QUOTE, ModifierFlag::SHIFT_L
      </autogen>

    </item>
    <item>
      <name>Left Ctrl and Backspace to Del</name>
      <appendix>Unused and so now a bit easier to type</appendix>

      <identifier>space_cadet.left_control_and_backspace_to_del</identifier>

      <autogen>
        --KeyToKey--
        KeyCode::DELETE, ModifierFlag::CONTROL_L,

        KeyCode::DELETE, ModifierFlag::FN
      </autogen>

    </item>
    <item>
      <name>Left Shift and Backspace to Del</name>
      <appendix>Unused and so now a bit easier to type</appendix>

      <identifier>space_cadet.left_shift_and_backspace_to_del</identifier>

      <autogen>
        --KeyToKey--
        KeyCode::DELETE, ModifierFlag::SHIFT_L,

        KeyCode::DELETE, ModifierFlag::FN
      </autogen>

    </item>

    <item>
      <name>CTRL-M to F19</name>
      <appendix>To stop ctrl-m and enter from being the same key</appendix>

      <identifier>space_cadet.ctrl_m_to_F19</identifier>

      <autogen>
        --KeyToKey--
        KeyCode::M, ModifierFlag::CONTROL_L,

        KeyCode::F19
      </autogen>

    </item>

    <item>
      <name>Capslock to F18 and Control</name>
      <appendix>Tap Capslock for F18, Hold for Control</appendix>
      <identifier>space_cadet.capslock_control_F18</identifier>
      <autogen>
        __KeyOverlaidModifier__
        KeyCode::CONTROL_L,
        KeyCode::CONTROL_L,
        KeyCode::F18
      </autogen>
    </item>



    <item>
      <name>Remap Left Control to Hyper</name>
      <appendix>OS X doesn't have a Hyper. This maps Left Control to Control + Shift + Option + Command.</appendix>

      <identifier>space_cadet.left_control_to_hyper</identifier>

      <autogen>
        --KeyToKey--
        KeyCode::CONTROL_L,

        KeyCode::COMMAND_L,
        ModifierFlag::OPTION_L | ModifierFlag::SHIFT_L | ModifierFlag::CONTROL_L
      </autogen>

    </item>
    <item>
      <name>Hyper Return</name>
      <identifier>private.hyper_return</identifier>
      <appendix>Allow Return in Hypermode</appendix>
      <autogen>
        --KeyToKey--
        KeyCode::RETURN,

        ModifierFlag::COMMAND_L | ModifierFlag::OPTION_L |
        ModifierFlag::SHIFT_L   | ModifierFlag::CONTROL_L,
        KeyCode::RETURN
      </autogen>
    </item>
    <item>
      <name>Hyper Backspace</name>
      <identifier>private.hyper_backspace</identifier>
      <appendix>Allow Backspace in Hypermode</appendix>
      <autogen>
        --KeyToKey--
        KeyCode::DELETE,

        ModifierFlag::COMMAND_L | ModifierFlag::OPTION_L |
        ModifierFlag::SHIFT_L   | ModifierFlag::CONTROL_L,
        KeyCode::DELETE
      </autogen>
    </item>
  </root>
