[push]
  default = current
[user]
  email = supercrabtree@googlemail.com
  name = George Crabtree
[core]
  excludesfile = ~/.gitignore
[web]
  browser = google-chrome
[advice]
  statusHints = false
[diff]
  mnemonicprefix = true
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[alias]
  last-commit-subject      = !git log -1 --pretty=%B
  contributors-markdown    = !git config --get remote.origin.url | sed \"s/\\(^git@github\\.com\\:\\)/https:\\/\\/api.github.com\\/repos\\//\"| sed 's/\\.git$/\\/contributors/' | xargs curl -s | jsawk -a 'return this.join(\"\")' 'return \"[\" + this.login +\"](\" + this.html_url + \") \" + this.contributions + \" \\n\"'
  peek                     = !git --no-pager diff @{1}.. && echo '\nCommits' && git --no-pager log @{1}.. --decorate --pretty='%C(yellow)%h %>(14)%Cgreen%cr %C(blue)%s %Creset%cn%C(auto)'
  br                       = !git for-each-ref --sort=committerdate refs/heads/ --format=' %(color:8)%(committerdate:relative)%(color:reset)|%(color:blue)%(HEAD)%(color:reset) %(refname:short)' | column -ts'|'
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
