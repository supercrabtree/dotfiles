[advice]
	statusHints = false
[alias]
	check = !git commit -m tmp && git add -A && git stash save check-stash && git reset @^ && git add -A
	wip = !git add -A && git commit --allow-empty -m \"WIP $(date \"+%a %d %h %H:%M:%S\") $(git rev-parse --abbrev-ref HEAD)\"
[commit]
	verbose = true
	template = ~/.config/git/templates/commit
	gpgsign = true
[core]
	excludesfile = ~/.gitignore
	hooksPath = ~/.config/git/hooks
[diff]
	algorithm = patience
	mnemonicprefix = true
	tool = vimdiff
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	program = gpg
[merge]
	tool = dispute
[mergetool "dispute"]
	cmd = vimdiff -c \"+3wincmd l\" -c \"+wincmd J\" -c \"MoreVimdiff\" $LOCAL $BASE $REMOTE $MERGED
	keepBackup = false
	trustExitCode = true
	keepTemporaries = false
[pager]
	log = diff-so-fancy | less --tabs=4
	diff = diff-so-fancy | less --tabs=4
	show = diff-so-fancy | less --tabs=4
[pretty]
	stacked = %n%n%-D%n%C(yellow)%h %>(14,trunc)%Cgreen%cr %C(blue)%<(50,trunc)%s %Creset%<(15,trunc)%an
[push]
	default = current
[rerere]
	enabled = true
[stash]
	showPatch = true
[status]
	showUntrackedFiles = all
