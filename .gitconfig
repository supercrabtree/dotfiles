[push]
  default = current
  followTags = true
[user]
  name = George Crabtree
  email = george.crabtree@bigcommerce.com
[commit]
  gpgsign = true
  verbose = true
[core]
  excludesfile = ~/.gitignore-global
[web]
  browser = google-chrome
[advice]
  statusHints = false
[diff]
  mnemonicprefix = true
  tool = vimdiff
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[alias]
  undo = reset HEAD~1
  peek = !git --no-pager diff @{1}.. && echo '\nCommits' && git --no-pager log @{1}.. --decorate --pretty='%C(yellow)%h %>(14)%Cgreen%cr %C(blue)%s %Creset%an%C(auto)'
[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX
[difftool]
  prompt = false
[pretty]
  #stacked = %n%n%-D%n%C(yellow)%h %>(14,trunc)%Cgreen%cr %C(blue)%<(50,trunc)%s %Creset%<(15,trunc)%an%>(23)%+N
  stacked = %n%n%-D%n%C(yellow)%h %>(14,trunc)%Cgreen%cr %C(blue)%<(50,trunc)%s %Creset%<(15,trunc)%an
  ignacio = %C(yellow)%h %C(green)%<(14,trunc)%an %Creset%s%Cred%d
[merge]
  conflictstyle = diff3
[status]
  showUntrackedFiles = all
[filter "tabspace"]
  smudge = gunexpand --tabs=4 --first-only
  clean = gexpand --tabs=4 --initial
[commit]
  verbose = true
